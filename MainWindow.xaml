<Window x:Class="lab4a_2_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4a_2_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Name="btnSelectSource" Content="Wybierz Katalog Źródłowy" Click="BtnSelectSource_Click" Margin="5"/>
            <Button Name="btnSelectDestination" Content="Wybierz Katalog Docelowy" Click="BtnSelectDestination_Click" Margin="5"/>
            <Button Name="btnStart" Content="Kopiuj Zdjęcia" Click="BtnStart_Click" Margin="5"/>
            <TextBlock Name="tbStatus" Text="Status: Oczekiwanie..." Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
